{
  "mcpServers": {
    "splunk": {
      "command": "uvicorn",
      "args": [
        "mcp_splunk_server:app",
        "--host",
        "localhost",
        "--port",
        "8001"
      ],
      "env": {
        "SPLUNK_HOST": "https://splunk.example.com:8089",
        "SPLUNK_USERNAME": "your-username",
        "SPLUNK_PASSWORD": "your-password"
      },
      "description": "Local Splunk MCP server for data discovery and querying"
    },
    "filesystem": {
      "command": "python",
      "args": [
        "-m",
        "mcp_filesystem_server"
      ],
      "description": "Local filesystem MCP server for file operations"
    },
    "web_search": {
      "command": "python",
      "args": [
        "-m",
        "mcp_web_search_server"
      ],
      "env": {
        "TAVILY_API_KEY": "your-tavily-api-key"
      },
      "description": "Web search MCP server using Tavily API"
    },
    "corporate_threat_intel": {
      "transport": "http",
      "url": "https://threat-intel.corp.com/mcp",
      "auth": {
        "type": "oauth2_client_credentials",
        "client_id": "peak-assistant-service",
        "client_secret": "${THREAT_INTEL_CLIENT_SECRET}",
        "scope": "intel:read threats:read indicators:read",
        "token_url": "https://threat-intel.corp.com/oauth/token"
      },
      "description": "Corporate threat intelligence MCP server (system-level access)"
    },
    "user_security_toolbox": {
      "transport": "http",
      "url": "https://security-toolbox.corp.com/mcp",
      "auth": {
        "type": "oauth2_authorization_code",
        "client_id": "peak-assistant-web",
        "client_secret": "${TOOLBOX_CLIENT_SECRET}",
        "scope": "tools:execute reports:read reports:write",
        "authorization_url": "https://security-toolbox.corp.com/oauth/authorize",
        "token_url": "https://security-toolbox.corp.com/oauth/token",
        "redirect_uri": "https://peak-assistant.corp.com/oauth/callback",
        "requires_user_auth": true
      },
      "description": "Personal security toolbox requiring user authentication"
    },
    "mitre_attack": {
      "transport": "http",
      "url": "https://mitre-attack-api.example.com/mcp",
      "auth": {
        "type": "bearer",
        "token": "your-api-token"
      },
      "description": "MITRE ATT&CK framework MCP server"
    },
    "user_cloud_resources": {
      "transport": "http",
      "url": "https://cloud-api.corp.com/mcp",
      "auth": {
        "type": "oauth2_authorization_code",
        "client_id": "peak-assistant-cloud",
        "scope": "resources:read logs:read compute:read",
        "authorization_url": "https://cloud-api.corp.com/oauth/authorize",
        "token_url": "https://cloud-api.corp.com/oauth/token",
        "redirect_uri": "https://peak-assistant.corp.com/oauth/callback",
        "requires_user_auth": true
      },
      "description": "User's personal cloud resources (requires user consent)"
    }
  },
  "serverGroups": {
    "research": [
      "web_search",
      "mitre_attack",
      "corporate_threat_intel"
    ],
    "data_discovery": [
      "splunk",
      "filesystem"
    ],
    "user_personal": [
      "user_security_toolbox",
      "user_cloud_resources"
    ],
    "mixed_auth_example": [
      "corporate_threat_intel",
      "user_security_toolbox",
      "web_search"
    ],
    "all": [
      "splunk",
      "filesystem", 
      "web_search",
      "corporate_threat_intel",
      "user_security_toolbox",
      "mitre_attack",
      "user_cloud_resources"
    ]
  }
}
